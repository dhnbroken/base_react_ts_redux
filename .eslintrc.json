{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/typescript",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": { "jsx": true },
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "build/",
    "coverage/",
    ".eslintrc.json",
    ".prettierrc.json",
    ".gitignore",
    ".gitattributes",
    ".vscode/",
    ".github/",
    ".husky/",
    ".lintstagedrc.js",
    ".prettier"
  ],
  "plugins": ["@typescript-eslint", "import", "react", "react-hooks","prettier"],
  "rules": {
    // Your rules go here
    "import/order": [
      "warn",
      {
        "groups": [
          "external", // external modules (e.g. "lodash", "react")
          "builtin", // built-in modules (e.g. "fs", "path")
          "internal", // internal modules (e.g. "@/components", "@/utils")
          "parent", // parent directories (e.g. "../", "../../")
          "sibling", // sibling files (e.g. "./utils", "./components")
          "index"
        ]
      }
    ],
    "no-var": "error",
    "prettier/prettier": "error"
  }
}
